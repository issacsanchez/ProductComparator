@model ProductTag
<h3 class="p-2 bg-primary text-white text-center">Update Product Tag</h3>
<form asp-action="UpdateProductTag" method="post">
  <div class="form-group">
    <label asp-for="Id"></label>
    <input asp-for="Id" class="form-control" readonly />
  </div>
  @if (ViewBag.add == false)
  {
    <div class="form-group">
      <label asp-for="Product"></label>
      <select class="form-control" asp-for="ProductId">
        @if (Model.Id == 0)
        {
          <option disabled selected>Choose Product</option>
        }
        @foreach (Product c in ViewBag.Products)
        {
          <option selected=@(Model.Product?.Id == c.Id) value="@c.Id">@c.name</option>
        }
      </select>
    </div>
    <div class="form-group">
      <label asp-for="User"></label>
      <select class="form-control" asp-for="UserId">
        @if (Model.Id == 0)
        {
          <option disabled selected>Reviewing User</option>
        }
        @foreach (User c in ViewBag.Users)
        {
          <option selected=@(Model.User?.Id == c.Id) value="@c.Id">@c.name</option>
        }
      </select>
    </div>
    <div class="row">
      <div class="col-md-8">
        <div class="form-group">
          <label asp-for="Tag"></label>
          <select class="form-control" asp-for="TagId">
            <!--2-->
            @if (Model.Id == 0)
            {
              <option disabled selected>Choose Tag</option>
            }
            <!--3-->
            @foreach (Tag m in ViewBag.Tags)
            {
              <option selected=@(Model.Tag?.Id == m.Id) value="@m.Id">@m.name</option>
            }
          </select>
        </div>
      </div>
      <div class="col-md-4">
        <div class="form-group">
          <label for="addBtn">Dont see a Tag?</label>
          <a asp-action="UpdateProductTag" asp-route-key="@Model.Id" asp-route-add="true"
             class="btn btn-outline-primary form-control">New</a>
        </div>
      </div>
    </div>
    <div class="form-group">
      <label asp-for="opinion"></label>
      <input type="number" asp-for="opinion" class="form-control" />
    </div>
  }
  else
  {
    <h4>WUT TO DO</h4>
  }
  <div class="text-center">
    <button class="btn btn-primary" type="submit">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
  </div>
</form>