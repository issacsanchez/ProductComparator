@model IEnumerable<Review>
<h3 class="p-2 bg-primary text-white text-center">Reviews</h3>
<div class="container-fluid mt-3">
  <div class="row">
    <div class="col-1 font-weight-bold">Id</div>
    <div class="col font-weight-bold">User</div>
    <div class="col font-weight-bold">Product</div>
    <div class="col font-weight-bold">Criteria</div>
    <div class="col font-weight-bold">Score</div>
    <div class="col"></div>
  </div>
  @foreach (Review p in Model)
  {
    <div class="row p-2">
      <div class="col-1">@p.Id</div>
      <div class="col">@p.User.name</div>
      <div class="col">@p.Product.name</div>
      <div class="col">@p.Criteria.name</div>
      <div class="col">@p.score</div>
      <div class="col">
        <form asp-action="DeleteReview" method="post">
          <a asp-action="UpdateReview" asp-route-key="@p.Id"
             class="btn btn-outline-primary">
            Edit
          </a>
          <input type="hidden" name="Id" value="@p.Id" />
          <button type="submit" class="btn btn-outline-danger">
            Delete
          </button>
        </form>
      </div>
    </div>
  }
  <div class="text-center p-2">
    <a asp-action="UpdateReview" asp-route-key="0"
       class="btn btn-primary">Add</a>
  </div>
</div>