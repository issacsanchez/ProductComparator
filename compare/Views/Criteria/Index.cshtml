@model IEnumerable<Criteria>
<h3 class="p-2 bg-primary text-white text-center">Criterias</h3>
<div class="container-fluid mt-3">
  <div class="row">
    <div class="col-1 font-weight-bold">Id</div>
    <div class="col font-weight-bold">Name</div>
    <div class="col-3"></div>
  </div>
  @if (ViewBag.EditId == null)
  {
    <form asp-action="AddCriteria" method="post">
      @Html.Partial("CriteriaEditor", new Criteria())
    </form>
  }
  @foreach (Criteria c in Model)
  {
    @if (c.Id == ViewBag.EditId)
    {
      <form asp-action="UpdateCriteria" method="post">
        <input type="hidden" name="Id" value="@c.Id" />
        @Html.Partial("CriteriaEditor", c)
      </form>
    }
    else
    {
      <div class="row p-2">
        <div class="col-1">@c.Id</div>
        <div class="col">@c.name</div>
        <div class="col-3">
          <form asp-action="DeleteCriteria" method="post">
            <input type="hidden" name="Id" value="@c.Id" />
            <a asp-action="EditCriteria" asp-route-id="@c.Id"
               class="btn btn-outline-primary">Edit</a>
            <button type="submit" class="btn btn-outline-danger">
              Delete
            </button>
          </form>
        </div>
      </div>
    }
  }
</div>